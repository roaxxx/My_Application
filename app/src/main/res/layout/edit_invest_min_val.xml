<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="60dp"
        tools:context=".add_investMoney" android:background="@color/white">

    <TextView
            android:text="@string/MinValToInvest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView36"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textSize="24sp"
            android:fontFamily="@font/roboto"
            android:textStyle="bold" android:textColor="@color/greyText"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/twtMoney"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textSize="34sp"
            android:textColor="#000000"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Nuevo valor mÃ­nimo"
            android:ems="10"
            android:background="@drawable/borderredius"
            android:layout_marginBottom="20dp"
            android:id="@+id/edtValTM" android:fontFamily="@font/roboto" android:minHeight="48dp"
            android:textColorHint="@color/Hint" android:textColor="@color/black"/>
    <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="@string/update"
            android:backgroundTint="@color/Green"
            android:textAllCaps="false"
            android:id="@+id/btnAddMI" android:fontFamily="@font/roboto" android:textSize="20sp"
            android:textStyle="bold"/>
</LinearLayout>