<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ShowClients">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:gravity="center" android:paddingHorizontal="10dp"
            app:layout_constraintBottom_toTopOf="@+id/siAddInvest" app:layout_constraintVertical_bias="0.027"
            android:background="@color/white">
        <TextView
                android:text="@string/Label_fond_cap_t"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView19" android:gravity="center"
                android:textSize="18sp" android:textStyle="bold" android:fontFamily="@font/roboto"
                android:layout_marginBottom="3dp" android:textColor="@color/greyText"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tFont3" android:gravity="center"
                android:fontFamily="@font/roboto" android:textSize="28sp" android:textStyle="bold"
                android:textColor="#000000" android:layout_marginBottom="3dp"/>
        <TextView
                android:text="@string/clients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView21" android:gravity="center"
                android:textSize="18sp" android:textStyle="bold" android:fontFamily="@font/roboto"
                android:layout_marginBottom="3dp" android:textColor="@color/greyText"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/numClients3" android:gravity="center"
                android:fontFamily="@font/roboto" android:textSize="28sp" android:textStyle="bold"
                android:textColor="#000000" android:layout_marginBottom="3dp"/>
        <TextView
                android:text="@string/Label_investiments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView23" android:gravity="center"
                android:textSize="18sp" android:textStyle="bold" android:fontFamily="@font/roboto"
                android:layout_marginBottom="3dp" android:textColor="@color/greyText"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/numInvest3" android:gravity="center"
                android:fontFamily="@font/roboto" android:textSize="28sp" android:textStyle="bold"
                android:textColor="#000000" android:layout_marginBottom="40dp"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/ListShowC"/>
    </LinearLayout>
    <Button
            android:text="@string/add_Clients"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/siAddInvest"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@color/zian"
            android:textColor="#000000" android:textAllCaps="false" android:drawableTop="@drawable/ic_baseline_add_24"
            app:layout_constraintHorizontal_bias="0.0"
    />
</androidx.constraintlayout.widget.ConstraintLayout>