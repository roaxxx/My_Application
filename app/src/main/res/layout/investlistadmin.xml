<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:id="@+id/invest"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:animateLayoutChanges="true"
                                   app:cardCornerRadius="5dp"
                                   app:cardElevation="3dp"
                                   app:cardUseCompatPadding="true" app:cardBackgroundColor="#D9D9D9"
                                   android:background="@drawable/borderredius">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="horizontal"
            android:padding="10dp" android:backgroundTint="@color/cardBack" android:gravity="center">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="181dp"
                android:layout_height="match_parent">
            <TextView
                    android:text="@string/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TextMov"
                    android:textSize="18dp" android:textColor="@color/greyText"/>
            <TextView
                    android:text="El dorado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameInv"
                    android:textSize="18sp"
                    android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="102dp"
                android:layout_height="match_parent">
            <TextView
                    android:text="@string/Invested"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tClientInvest"
                    android:textSize="18sp" android:textColor="@color/greyText"/>
            <TextView
                    android:text="$2400"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/valInvest"
                    android:textSize="18sp" android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
