<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".add_Client"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingHorizontal="60dp"
        android:gravity="center">

    <TextView
            android:text="@string/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="28sp"
            android:gravity="center"
            android:textColor="#000000"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>
    <TextView
            android:text="@string/id_Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="20sp"
            android:fontFamily="@font/roboto"
            android:gravity="start"
            android:paddingStart="10dp"
            android:textColor="#000000"
            android:paddingEnd="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="3dp"
            android:textStyle="bold"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/idCardC"
            android:hint="Ingrese su usuario"
            android:minHeight="48dp"
            android:backgroundTint="#00D50000"
            android:backgroundTintMode="src_over"
            android:paddingLeft="10dp"
            android:background="#D9D9D9"/>
    <TextView
            android:text="@string/E_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="20sp"
            android:fontFamily="@font/roboto"
            android:gravity="start"
            android:paddingStart="10dp"
            android:textColor="#000000"
            android:paddingEnd="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="3dp"
            android:textStyle="bold"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:backgroundTint="#00D50000"
            android:ems="16"
            android:id="@+id/eMailC"
            android:textSize="20sp"
            android:fontFamily="@font/roboto"
            android:minHeight="48dp"
            android:backgroundTintMode="src_over"
            android:background="#D9D9D9"
            android:paddingLeft="10dp"
            android:hint="Dirección de correo"
            android:autofillHints=""/>
    <TextView
            android:text="@string/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="20sp"
            android:fontFamily="@font/roboto"
            android:gravity="start"
            android:paddingStart="10dp"
            android:textColor="#000000"
            android:paddingEnd="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="3dp"
            android:textStyle="bold"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:backgroundTint="#00D50000"
            android:ems="16"
            android:id="@+id/nameC"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:fontFamily="@font/roboto"
            android:minHeight="48dp"
            android:hint="Nombre completo"
            android:background="#D9D9D9"
            android:backgroundTintMode="src_over"
            android:autofillHints=""/>
    <TextView
            android:text="@string/Label_pasw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textSize="20sp"
            android:fontFamily="@font/roboto"
            android:gravity="start"
            android:paddingStart="10dp"
            android:textColor="#000000"
            android:paddingEnd="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="3dp"
            android:textStyle="bold"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:backgroundTint="#00D50000"
            android:ems="16"
            android:id="@+id/passwC"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:fontFamily="@font/roboto"
            android:background="#D9D9D9"
            android:backgroundTintMode="src_over"
            android:minHeight="48dp"
            android:hint="Contraseña nueva"
            android:autofillHints=""/>
    <TextView
            android:text="@string/c_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textSize="20sp"
            android:fontFamily="@font/roboto"
            android:gravity="start"
            android:paddingStart="10dp"
            android:textColor="#000000"
            android:paddingEnd="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="3dp"
            android:textStyle="bold"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/ageClient"
            android:hint="Edad actual"
            android:minHeight="48dp"
            android:backgroundTint="#00D50000"
            android:backgroundTintMode="src_over"
            android:paddingLeft="10dp"
            android:background="#D9D9D9"
            android:layout_marginBottom="15dp"/>
    <Button
            android:text="@string/add"
            android:layout_width="176dp"
            android:layout_height="59dp"
            android:id="@+id/addnClient"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:textAllCaps="false"
            android:backgroundTint="@color/Green"
            android:textSize="18sp"
            android:textStyle="bold"/>
</LinearLayout>